<header class="text-end px-5 pt-3">
  <%= link_to "Back to My Account", user_path(resource) %>
</header>


<main class="container pt-5 mt-5">
  <section class="floating-box p-5">

    <h2 class="text-center">Edit My Information</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="form-group pt-3">
          <%= f.label "Email" %>
          <%= f.text_field :email, class: "form-control", required: true, autofocus: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <div class="form-group pt-3">
          <%= f.label "Current Password (Required)" %>
          <%= f.password_field :current_password,
                  class: "form-control",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
        </div> <!-- form-group -->
        <div class="form-group pt-3">
          <%= f.label "New Password (Leave Blank to Keep Current Password)" %>
          <%= f.password_field :password,
                  class: "form-control",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        </div> <!-- form-group -->
        <div class="form-group pt-3">
          <%= f.label "Confirm New Password (If Applicable)" %>
          <%= f.password_field :password_confirmation,
                  class: "form-control",
                    input_html: { autocomplete: "new-password" } %>
        </div> <!-- form-group -->

      <div class="form-actions text-center pt-3">
        <%= f.button :submit, "Update", class: "btn btn-red" %>
      </div>
    <% end %>

  </section>
</main>
